
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBU10KMi6F3Q7OPrlvmCmHTcirWAk0PTTg&v=3.exp&sensor=false&libraries=places"></script>


<script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>


<style>
#map-canvas {
  margin: 0;
  padding: 0;
  height: 300px;
}
</style>


<h3>{{event.event_name}}</h3>
<br>

<h4>Organization: Mission Green Earth</h4>
<p>
Mission Green Earth was founded in 2001 by Tony Treelander to help combat climate change. Trees provide fresh oxygen and removes harmful carbon dioxides from the environment.
</p>

<br>

<div class="row">
	<div class="col-md-8">
			<div class="container" id="map-canvas" style="width:100%"></div>

	</div>
	<div class="col-md-4" style="color:grey">
	<p>Start Date: {{event.event_start_date}}</p>
	<p>End Date: {{event.event_end_date}}</p>
	<p>Created Date: {{event.created_time}} </p>
	<h3>Status: <span style="color:green"> {{event.status}} </span></h3>
	</div>
</div>



<br>
{{#if user_apps}}
<h3>Applications:</h3>
{{#each user_apps}}
<div class="row">
		<div class="col-md-8">
		 <h4 style="display: inline;vertical-align: center;">{{volunteer.name}}</h4> 
		 <p style="display: inline;vertical-align: center;"> {{application.created_time}}<p>
		</div>
		<div class="col-md-4">
			<form method="post" action="/applications/{{application._id}}" >

			<button type="submit" name="application_action" value="accept" class="btn btn-success">Accept</button>
			<button type="submit" name="application_action" value="decline" class="btn btn-warning">Decline</button>
			</form>
		</div>
</div>
<hr>
{{/each}}
{{/if}}

{{#if user_accepted}}
<h3>Accepted Applications:</h3>
{{#each user_accepted}}
	<div class="row">
		<div class="col-md-8">
		 <h4 style="display: inline;vertical-align: center;">{{volunteer.name}}</h4> 
		 <p style="display: inline;vertical-align: center;"> {{application.created_time}}<p>
		</div>
</div>
<hr>
{{/each}}
{{/if}}

<script>

function init() {

  var myLatLng = {lat: 43.6600, lng: -79.3948};

  var map = new google.maps.Map(document.getElementById('map-canvas'), {
    zoom: 12,
    center: myLatLng
  });


  var marker = new google.maps.Marker({
    position: myLatLng,
    map: map,
    title: 'Hello World!'
  });

 }

 google.maps.event.addDomListener(window, 'load', init);

</script>