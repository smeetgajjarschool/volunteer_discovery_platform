<script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>
<head>
<style>
html,
body,
#map-canvas {
  margin: 0;
  padding: 0;
  height: 100%;
}
</style>
</head>

<h2 class="page-header">{{user.name}}'s Profile</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

{{#ifCond user.user_type "===" "volunteer" }}
  <div id="volunteer_profile">
    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <td>{{user.name}}</td>
      </tr>
      <tr>
        <th>Date of Birth</th>
        <td>{{profile.dob}}</td>
      </tr>
      <tr>
        <th>Interests</th>
        <td>{{profile.interests}}</td>
      </tr>
      <tr>
        <th>Skills and Experiences</th>
        <td>{{profile.skills}}</td>
      </tr>
    </table>
    <br><br>
    <table class="table table-striped">
      <tr>
        <th colspan="14">Availability</th>
      </tr>
      <tr>
        <th colspan="2">Monday</th>
        <th colspan="2">Tuesday</th>
        <th colspan="2">Wednesday</th>
        <th colspan="2">Thursday</th>
        <th colspan="2">Friday</th>
        <th colspan="2">Saturday</th>
        <th colspan="2">Sunday</th>
      </tr>
      <tr>
        <th>From</th>
        <th>To</th>
        <th>From</th>
        <th>To</th>
        <th>From</th>
        <th>To</th>
        <th>From</th>
        <th>To</th>
        <th>From</th>
        <th>To</th>
        <th>From</th>
        <th>To</th>
        <th>From</th>
        <th>To</th>
      </tr>
      <tr>
        <td>{{profile.availability.monday.from}}</td>
        <td>{{profile.availability.monday.to}}</td>
        <td>{{profile.availability.tuesday.from}}</td>
        <td>{{profile.availability.tuesday.to}}</td>
        <td>{{profile.availability.wednesday.from}}</td>
        <td>{{profile.availability.wednesday.to}}</td>
        <td>{{profile.availability.thursday.from}}</td>
        <td>{{profile.availability.thursday.to}}</td>
        <td>{{profile.availability.friday.from}}</td>
        <td>{{profile.availability.friday.to}}</td>
        <td>{{profile.availability.saturday.from}}</td>
        <td>{{profile.availability.saturday.to}}</td>
        <td>{{profile.availability.sunday.from}}</td>
        <td>{{profile.availability.sunday.to}}</td>
      </tr>
    </table>
    <br><br>
    {{#if apps}}
      <table class="table table-striped">
        <tr>
          <th colspan="4">Completed Events</th>
        </tr>
        <tr>
          <th>Event Name</th>
          <th>Organization</th>
          <th>Location</th>
          <th>Date</th>
        </tr>
        {{#each apps}}
          <tr>
            <tr>
            <td>{{this.event.event_name}}</td>
            <td>{{this.user.name}}</td>
            <td>{{this.event.location_name}}</td>
            <td>{{this.event.event_start_date}}</td>
          </tr>
        {{/each}}
      </table><br>
    {{/if}}
    {{#ifCond num_reviews "!==" "0"}}
      <table class="table table-striped">
        <tr>
          <th colspan="2">Ratings</th>
        </tr>
        <tr>
          <th>Average Rating</th>
          <td>{{average_rating}}</td>
        </tr>        
        <tr>
          <th>Number of Reviews</th>
          <td>{{num_reviews}}</td>
        </tr>
        <tr>
          <th>Number of Completed Events</th>
          <td>{{apps.length}}</td>
        </tr>
      </table><br>

      <table class="table table-striped">
        <tr>
          <th colspan="4">Reviews</th>
        </tr>
        <tr>
          <th>Organization</th>
          <th>Event Name</th>
          <th>Review</th>
          <th>Rating</th>
        </tr>
        {{#each apps}}
          <tr>
            <td>{{this.user.name}}</td>
            <td>{{this.event.event_name}}</td>
            <td>{{this.review.review}}</td>
            <td>{{this.review.rating}}</td>
          </tr>
        {{/each}}
      </table>

    {{else}}
      <table class="table table-striped">
        <tr>
          <th colspan="2">Ratings</th>
        </tr>
        <tr>
          <th>Average Rating</th>
          <td>None</td>
        </tr>        
        <tr>
          <th>Number of Reviews</th>
          <td>{{num_reviews}}</td>
        </tr>
        <tr>
          <th>Number of Completed Events</th>
          <td>{{apps.length}}</td>
        </tr>
      </table>
    {{/ifCond}}

  </div>
{{ else }}
  <div id="organization_profile">
    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <td>{{user.name}}</td>
      </tr>
      <tr>
        <th>Organization Type</th>
        <td>{{profile.type_org}}</td>
      </tr>
      <tr>
        <th>Organization Description</th>
        <td>{{profile.description}}</td>
      </tr>
      <tr>
        <th>Main Office Location</th>
        <td>{{user.address}}</td>
      </tr>
      <tr>
        <th>Phone Number</th>
        <td>{{profile.phone_number}}</td>
      </tr>
    </table>
    <br><br>
    {{#if events}}
      <table class="table table-striped">
        <tr>
          <th colspan="4">Past Events</th>
        </tr>
        <tr>
          <th>Event Name</th>
          <th>Number of Volunteers</th>
          <th>Location</th>
          <th>Date</th>
        </tr>
        {{#each events}}
          <tr>
            <td>{{this.event_name}}</td>
            <td>{{this.max_volunteers}}</td>
            <td>{{this.location_name}}</td>
            <td>{{this.event_start_date}}</td>
          </tr>
        {{/each}}
      </table><br>
    {{/if}}


    {{#ifCond num_reviews "!==" "0"}}
      <table class="table table-striped">
        <tr>
          <th colspan="2">Ratings</th>
        </tr>
        <tr>
          <th>Average Rating</th>
          <td>{{average_rating}}</td>
        </tr>        
        <tr>
          <th>Number of Reviews</th>
          <td>{{num_reviews}}</td>
        </tr>
        <tr>
          <th>Number of Events</th>
          <td>{{events.length}}</td>
        </tr>
      </table><br>

      <table class="table table-striped">
        <tr>
          <th colspan="4">Reviews</th>
        </tr>
        <tr>
          <th>Volunteer</th>
          <th>Event Name</th>
          <th>Review</th>
          <th>Rating</th>
        </tr>
        {{#each apps}}
          <tr>
            <td>{{this.user.name}}</td>
            <td>{{this.event.event_name}}</td>
            <td>{{this.review.review}}</td>
            <td>{{this.review.rating}}</td>
          </tr>
        {{/each}}
      </table>

    {{else}}
      <table class="table table-striped">
        <tr>
          <th colspan="2">Ratings</th>
        </tr>
        <tr>
          <th>Average Rating</th>
          <td>None</td>
        </tr>        
        <tr>
          <th>Number of Reviews</th>
          <td>{{num_reviews}}</td>
        </tr>
        <tr>
          <th>Number of Events</th>
          <td>{{events.length}}</td>
        </tr>
      </table>
    {{/ifCond}}

  </div>
{{/ifCond}}
